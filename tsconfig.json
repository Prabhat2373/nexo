{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
        "es6"
      ],
      
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "paths": {
        "@/*": [
          "./src/*"
        ],
        "@config/*": [
          "./src/config/*"
        ],
        "@routes/*": [
          "./src/routes/*"
        ],
      },
    // "typeRoots": [ "./types", "./node_modules/@types"]
    },
    // "include": ["src/**/*.ts"],
  }